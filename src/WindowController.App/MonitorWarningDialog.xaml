<ui:FluentWindow x:Class="WindowController.App.MonitorWarningDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="モニター配置の確認"
        Width="520" SizeToContent="Height"
    MinHeight="0"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Topmost="True"
        ShowInTaskbar="False"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ui:TitleBar Grid.Row="0" Title="モニター配置の確認"
                     ShowMaximize="False" ShowMinimize="False"/>

        <StackPanel Grid.Row="1" Margin="24,0,24,24">
            <!-- Header -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                <ui:SymbolIcon Symbol="Warning24" FontSize="22" Margin="0,0,8,0"
                               Foreground="#FFB900"/>
                <TextBlock Text="以下の警告があります。続行しますか？"
                           Style="{StaticResource SectionHeader}" Margin="0"/>
            </StackPanel>

            <!-- Monitor info -->
            <TextBlock x:Name="MonitorInfoText"
                       Style="{StaticResource SectionDescription}"
                       Margin="0,0,0,8"/>

            <!-- Warnings list -->
            <Border Style="{StaticResource SectionCard}" MaxHeight="260">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="WarningList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,3">
                                    <ui:SymbolIcon Symbol="Circle12" FontSize="8"
                                                   Foreground="#FFB900"
                                                   VerticalAlignment="Top" Margin="0,5,8,0"/>
                                    <TextBlock Text="{Binding}" TextWrapping="Wrap"
                                               FontSize="13"
                                               Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                <ui:Button Click="Continue_Click" Appearance="Caution"
                           Margin="0,0,8,0" Padding="16,8">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Checkmark24"/>
                    </ui:Button.Icon>
                    <ui:Button.Content>
                        <TextBlock Text="続行する"/>
                    </ui:Button.Content>
                </ui:Button>
                <ui:Button Click="Cancel_Click" Appearance="Secondary"
                           Padding="16,8">
                    <ui:Button.Icon>
                        <ui:SymbolIcon Symbol="Dismiss24"/>
                    </ui:Button.Icon>
                    <ui:Button.Content>
                        <TextBlock Text="キャンセル"/>
                    </ui:Button.Content>
                </ui:Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:FluentWindow>
